@page "/system-search"
@using EliteEvents.Visitors.Services
@inject DockingRedisService DockingService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>System Search</PageTitle>

<div class="container mt-4">
    <h2>System Search</h2>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="input-group mb-3">
                <input type="text"
                       class="form-control"
                   placeholder="Enter system name or partial match (ex. Sol or Colonia)"
                   @bind="searchQuery" />
                <button class="btn btn-primary"
                    @onclick="SearchSystems"
                    disabled="@(isLoading)">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Searching...</span>
                    }
                    else
                    {
                        <span>Search</span>
                    }
                </button>
            </div>
            <small class="text-muted">
                Enter at least 3 characters to search for systems with docking data
            </small>
        </div>
    </div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

    @if (searchPerformed)
    {
        @if (matchingSystems == null || matchingSystems.Count == 0)
        {
            <div class="alert alert-info mt-3">
                No systems found matching: <strong>@lastSearchQuery</strong>
            </div>
        }
        else if (matchingSystems.Count == 1)
        {
            <!-- Auto-redirect to details if only one match -->
            Navigation.NavigateTo($"/system-details/{Uri.EscapeDataString(matchingSystems[0])}");
        }
        else
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="mb-0">Matching Systems</h4>
                    <small class="text-muted">Found @matchingSystems.Count system(s) matching "@lastSearchQuery"</small>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var system in matchingSystems.OrderBy(s => s))
                        {
                            <a href="/system-details/@Uri.EscapeDataString(system)"
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">@system</h5>
                                    <small class="text-muted">Click to view station details</small>
                                </div>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private string searchQuery = "";
    private string lastSearchQuery = "";
    private List<string>? matchingSystems;
    private bool isLoading = false;
    private bool searchPerformed = false;
    private string? errorMessage;

    private async Task SearchSystems()
    {
        if (string.IsNullOrWhiteSpace(searchQuery) || searchQuery.Trim().Length < 3)
        {
            errorMessage = "Please enter at least 3 characters to search.";
            return;
        }

        isLoading = true;
        errorMessage = null;
        searchPerformed = false;
        matchingSystems = null;

        try
        {
            lastSearchQuery = searchQuery.Trim();

            // Get all systems matching the search query
            matchingSystems = await DockingService.GetMatchingSystemsAsync(lastSearchQuery);
            searchPerformed = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error searching for systems: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
