@page "/carrier-search"
@using EliteEvents.Visitors.Services
@inject DockingRedisService DockingService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Fleet Carriers</PageTitle>

<div class="container mt-4">
    <h2>Fleet Carrier Search</h2>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="input-group mb-3">
                <input type="text"
                       class="form-control"
                       placeholder="Enter carrier ID or partial match (ex. MFV or MFV-99)"
                       @bind="searchQuery"
                       @onkeydown="HandleKeyDown"/>
                <button class="btn btn-primary"
                        @onclick="SearchCarriers"
                        disabled="@(string.IsNullOrWhiteSpace(searchQuery) || isLoading)">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Searching...</span>
                    }
                    else
                    {
                        <span>Search</span>
                    }
                </button>
            </div>
            <small class="text-muted">
                Enter full carrier ID (e.g., MFV-99Z) or partial match (e.g., MFV)
            </small>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (searchPerformed)
    {
        @if (matchingCarriers == null || matchingCarriers.Count == 0)
        {
            <div class="alert alert-info mt-3">
                No carriers found matching: <strong>@lastSearchQuery</strong>
            </div>
        }
        else if (matchingCarriers.Count == 1)
        {
            <!-- Auto-redirect to details if only one match -->
            Navigation.NavigateTo($"/carrier-details/{matchingCarriers[0]}");
        }
        else
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h4 class="mb-0">Matching Carriers</h4>
                    <small class="text-muted">Found @matchingCarriers.Count carrier(s) matching "@lastSearchQuery"</small>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var carrier in matchingCarriers.OrderBy(c => c))
                        {
                            <a href="/carrier-details/@carrier"
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">@carrier</h5>
                                    <small class="text-muted">Click to view visitor details</small>
                                </div>
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private string searchQuery = "";
    private string lastSearchQuery = "";
    private List<string>? matchingCarriers;
    private bool isLoading = false;
    private bool searchPerformed = false;
    private string? errorMessage;

    private async Task SearchCarriers()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
            return;

        isLoading = true;
        errorMessage = null;
        searchPerformed = false;
        matchingCarriers = null;

        try
        {
            lastSearchQuery = searchQuery.ToUpperInvariant().Trim();

            // Get all carriers matching the search query
            matchingCarriers = await DockingService.GetMatchingCarriersAsync(lastSearchQuery);
            searchPerformed = true;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error searching for carriers: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchCarriers();
        }
    }
}
