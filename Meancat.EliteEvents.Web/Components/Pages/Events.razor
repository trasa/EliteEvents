@page "/events"
@using Microsoft.AspNetCore.SignalR.Client
@using EliteJournalReader.Events
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject ILogger<Events> Logger
<PageTitle>Elite Dangerous Events</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Live Status Events</h3>
        <div class="d-flex gap-2 align-items-center">
            <span class="badge @GetConnectionBadgeClass()">@connectionStatus</span>
            <button class="btn btn-sm btn-secondary" @onclick="ClearEvents">Clear</button>
        </div>
    </div>
    @if (events.Any()) {
        <div class="event-stream">
            @foreach (var evt in events)
            {
                <div class="event-card @GetEventClass(evt.EventName)">
                    <div class="event-header">
                        <span class="event-name">@evt.EventName</span>
                        <span class="event-time">@evt.Timestamp.ToString("HH:mm:ss.fff")</span>
                    </div>
                    <pre class="event-data">Status Flags:@evt.Flags</pre>
                    <pre class="event-data">Other Status Flags: @evt.Flags2</pre>
                    <pre class="event-data">Fuel: @evt.Fuel?.FuelMain @evt.Fuel?.FuelReservoir</pre>
                </div>
            }
        </div>
    }
</div>
@code {
   private HubConnection? hubConnection;
    private List<StatusFileEvent> events = [];
    private const int MaxEvents = 100;
    private string connectionStatus = "Disconnected";

    protected override async Task OnInitializedAsync()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/elite-hub"))
            .WithAutomaticReconnect()
            .ConfigureLogging(logging =>
            {
                logging.SetMinimumLevel(LogLevel.Debug);
                logging.AddConsole();
            })
            .Build();

        hubConnection.ServerTimeout = TimeSpan.FromSeconds(60);
        hubConnection.KeepAliveInterval = TimeSpan.FromSeconds(15);

        // Handle incoming status events - matches your service's SendAsync call
        hubConnection.On<StatusFileEvent>("ReceiveStatus", async (eventData) =>
        {
            Logger.LogInformation("event received");
            Console.WriteLine("event receive");
            events.Insert(0, eventData);
            Console.WriteLine($"events: {events.Count}");

            // Trim to max events
            if (events.Count > MaxEvents)
            {
                events.RemoveRange(MaxEvents, events.Count - MaxEvents);
            }

            await InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync();
        connectionStatus = "Connected";
    }

    private string GetEventClass(string eventName)
    {
        return eventName?.ToLower() switch
        {
            "docked" => "event-docked",
            "undocked" => "event-undocked",
            "fsdjump" => "event-fsdJump",
            "location" => "event-location",
            _ => "event-default"
        };
    }

    private string GetConnectionBadgeClass()
    {
        return connectionStatus switch
        {
            "Connected" => "bg-success",
            "Reconnecting..." => "bg-warning",
            "Disconnected" => "bg-secondary",
            _ => "bg-danger"
        };
    }

    private void ClearEvents()
    {
        Console.WriteLine("clear events");
        events.Clear();
    }

}
